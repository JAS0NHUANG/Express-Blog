<!doctype html>

<%- include('./partials/head') %>

<html>
    <% console.log(admin) %>

    <div class="main">
    <% if(admin) { %>
        
        <a href="/editor">New Post</a>
        <a href="/categories">Categories</a>

        <table calss="post__table">
            <thead>
                <tr>
                    <th>Post ID</th>
                    <th>Title</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
        <% posts.forEach( function(post) { %>
                <tr>
                    <td><%= post.id %></td>
                    <td><%= post.title %></td>
                    <td><a href="/editor/<%= post.id %>">Edit</td>
                    <td><a href="/delete/<%= post.id %>">Delete</td>
                </tr>
        <% }) %>
            </tbody>
        </table>
    <% } else { %>
        <h1>You are not ADMINATOR!!!</h1>
        <p>Please <a href="/login">login</a>.<p>
    <% } %>
    </div>

</html>
